.tabbar_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 110rpx;
  box-shadow: 0 0 20rpx #ee3d54;
}

.tabbar_box.iphoneX-height {
  padding-bottom: 66rpx;
}

.middle-wrapper {
  position: absolute;
  right: 310rpx;
  bottom: 0;
  background-color: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
}

.middle-wrapper.iphoneX-height {
  bottom: 66rpx;
}

.tabbar_nav {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  height: 100%;
  width: 90rpx;
  position: relative;
}

.tabbar_nav_border {
  border-top: solid 5rpx #fff;
}

.tabbar_nav_border_none {
  border-top: solid 5rpx #f05d70;
}

.tabbar_nav text {
  margin-top: 10rpx;
}

.tabbar_icon {
  width: 40rpx;
  height: 40rpx;
}

.special-wrapper {
  position: absolute;
  left: 77rpx;
  top: -36rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  /* border-top: 2rpx solid #f2f2f3;
  background-color: #fff; */
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
}

.special-wrapper .tabbar_icon {
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgba(215, 166, 70, 1);
}

.special-text-wrapper {
  width: 56rpx;
  height: 56rpx;
}
